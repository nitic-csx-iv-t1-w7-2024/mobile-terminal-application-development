{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/react-native/tsconfig.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "types": ["node", "react-native"]
  },
  "include": ["./src/**/*", "./*.*ts", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["**/node_modules/**/*"]
}
